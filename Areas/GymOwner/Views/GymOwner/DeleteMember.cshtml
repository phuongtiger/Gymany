@model Gymany.Models.Member
@{
    ViewData["Title"] = "DeleteMember";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-action="DeleteMember" method="post">
    <input type="hidden" asp-for="MemberID" />
    <div class="text-center">
        <h2 class="display-4">Are You Want to delete this request</h2>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-danger">Delete</button> Or <a asp-action="MemberAccount"
            asp-controller="GymOwner" class="btn btn-success">Back to Member</a>
    </div>


</form>