@model Gymany_API.Models.Product
@{
    ViewData["Title"] = "AddProduct";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



<form asp-controller="GymOwner" asp-action="AddProduct" method="post">

    <label asp-for="Name"></label>:
    <input type="text" asp-for="Name">
    <br>
    <label asp-for="Description"></label>:
    <input type="text" asp-for="Description">
    <br>
    <label asp-for="Amount"></label>:
    <input type="number" asp-for="Amount">
    <br>
    <label asp-for="Image"></label>:
    <input type="text" asp-for="Image">
    <br>
    <label asp-for="Price"></label>:
    <input type="number" asp-for="Price" step="0.01">
    <br>
    <label asp-for="CategoryID"></label>:
    <input type="number" asp-for="CategoryID" step="1">

    <input type="Submit" value="Submit">
</form>