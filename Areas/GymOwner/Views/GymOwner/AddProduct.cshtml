@model Gymany.Models.Product
@{
    ViewData["Title"] = "AddProduct";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

 <div class="text-center">
        <h2 class="display-4">Add Product</h2>
    </div>
<form asp-controller="GymOwner" asp-action="AddProduct" method="post" class="container">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Description" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Amount" class="col-sm-2 col-form-label">Amount:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Amount" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Image" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Price" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CategoryID" class="col-sm-2 col-form-label">Category ID:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="CategoryID" class="form-control" step="1" required>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Submit" class="btn btn-primary">
            <a asp-action="Product" asp-controller="GymOwner" class="btn btn-danger">Back to Product</a>
        </div>
    </div>
</form>