@model Gymany.Models.Customer
@{
    ViewData["Title"] = "UpdateCustomerAccount";
}

@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center">
    <h2 class="display-4">Update Customer</h2>
</div>
<form asp-controller="GymOwner" asp-action="UpdateCustomerAccount" method="post" class="container">

      <div class="form-group row">
        <label asp-for="CustomerID" class="col-sm-2 col-form-label">Customer ID:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="CustomerID" value="@ViewBag.CustomerID" class="form-control" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Username" class="col-sm-2 col-form-label">Username:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Username" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Password" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label">Address:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Address" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Age" class="col-sm-2 col-form-label">Age:</label>
        <div class="col-sm-10">
            <input type="date" asp-for="Age" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Image" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label">Phone:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Phone" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            <input type="email" asp-for="Email" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Update" class="btn btn-primary">
            <a asp-action="CustomerAccount" asp-controller="GymOwner" class="btn btn-danger">Back to Customer</a>
        </div>
    </div>
</form>
