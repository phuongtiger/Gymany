@using X.PagedList
@using X.PagedList.Mvc.Core
@model IEnumerable<Gymany.Models.Customer>
@{

    ViewData["Title"] = "Customer";
}

@* using layout of Gymowner *@
@{
    Layout = "GymOwnerLayout";
}


@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="page-wrapper">
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Customer Managements</h4>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Customer Managements</h3>
                            <a asp-action="AddCustomerAccount" asp-controller="GymOwner" class="btn btn-primary">Add new</a>
                            <div class="table-responsive">
                                <table class="table text-wrap">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">Username</th>
                                            <th class="border-top-0">Password</th>
                                            <th class="border-top-0">Name</th>
                                            <th class="border-top-0">Address</th>
                                            <th class="border-top-0">Age</th>
                                            <th class="border-top-0">Image</th>
                                            <th class="border-top-0">Phone</th>
                                            <th class="border-top-0">Email</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CustomerID</td>
                                                <td>@item.Username</td>
                                                <td>@item.Password</td>
                                                <td>@item.Name</td>
                                                <td>@item.Address</td>
                                                <td>@item.Age</td>
                                                <td><img src="
                                                    @item.Image" alt="image" style="width: 100px; height: 100px;" /></td>
                                                <td>@item.Phone</td>
                                                <td>@item.Email</td>
                                                <td>
                                                    <a asp-controller="GymOwner" asp-action="UpdateCustomerAccount" class="btn btn-success" asp-route-id="@item.CustomerID" style="color: #fff;">Update</a>
                                                    <a asp-controller="GymOwner" asp-action="DeleteCustomerAccount" class="btn btn-danger" asp-route-id="@item.CustomerID" style="color: #fff;">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("CustomerAccount", new { page = page }),
                    new X.PagedList.Web.Common.PagedListRenderOptionsBase
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                })
            </div>
            <footer class="footer text-center"> 2024 Â© Gymany Admin by Group 05
            </footer>
        </div>
    </div>