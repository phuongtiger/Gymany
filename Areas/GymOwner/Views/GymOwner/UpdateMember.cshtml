@model Gymany.Models.Member
@{
    ViewData["Title"] = "UpdateMember";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center">
    <h2 class="display-4">Upgrade Customer to Member</h2>
</div>
<form asp-controller="GymOwner" asp-action="UpdateMember" method="post" class="container" style="max-width: 1100px;">


    <div class="form-group row">
        <label asp-for="MemberID" class="col-sm-2 col-form-label">Member ID:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="MemberID" value="@Model.MemberID" class="form-control" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CustomerID" class="col-sm-2 col-form-label">Customer Name:</label>
        <div class="col-sm-10">
            <select asp-for="CustomerID" class="form-control" asp-items="@ViewBag.CustomerId" disabled></select>
            <input type="hidden" asp-for="CustomerID" />
            <span asp-validation-for="CustomerID" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Date:</label>
        <div class="col-sm-10">
            <input type="date" asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Status" class="col-sm-2 col-form-label">Status:</label>
        <div class="col-sm-10">
            <select asp-for="Status" class="form-control">
                <option value="Accepted">Accepted</option>
                <option value="Unaccepted">Unaccepted</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Update" class="btn btn-primary">
            <a asp-action="MemberAccount" asp-controller="GymOwner" class="btn btn-danger">Back to Member Manage</a>
        </div>
    </div>
</form>
