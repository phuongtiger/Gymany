@model Gymany.Models.ListModels


@{
    ViewData["Title"] = "EditProfile";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="container">
    <div class="row" style="padding: 20px 0;">

        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header" style="background-color: #ff9500;color: white;">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    @if (Model.customer.Image == null)
                    {
                        <img class="img-account-profile rounded-circle mb-2"
                            src="http://bootdey.com/img/Content/avatar/avatar1.png" alt=""
                            style="margin-right: auto; margin-left: auto;width: 200px;height: 200px;">
                    }
                    else
                    {
                        <img class="img-account-profile rounded-circle mb-2" src="@Model.customer.Image" alt=""
                            style="margin-right: auto; margin-left: auto;width: 200px;height: 200px;">
                    }
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header" style="background-color: #ff9500;color: white;">Account Details</div>
                <div class="card-body">
                    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                        <!-- Form Group (id)-->

                        <input class="form-control" id="inputName" type="hidden" asp-for="@Model.customer.CustomerID">


                        <!-- Form Group (username)-->

                        <input type="hidden" asp-for="@Model.customer.Username" class="form-control form-control-lg" />


                        <!-- Form Group (name)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputAddress">Name</label>
                            <input asp-for="@Model.customer.Name" class="form-control form-control-lg" />

                        </div>
                        <!-- Form Group (password)-->


                        <input class="form-control" id="inputName" type="hidden" placeholder="Enter your username"
                            asp-for="@Model.customer.Password">


                        <!-- Form Group (Address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputAddress">Address</label>
                            <input class="form-control" id="inputAddress" type="text" placeholder="Enter your address"
                                asp-for="@Model.customer.Address">

                        </div>

                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input class="form-control" id="inputEmailAddress" type="email"
                                placeholder="Enter your email address" asp-for="@Model.customer.Email">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputPhone">Phone number</label>
                                <input class="form-control" id="inputPhone" type="tel"
                                    placeholder="Enter your phone number" asp-for="@Model.customer.Phone">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputBirthday">Birthday</label>
                                <input class="form-control" id="inputBirthday" type="date"
                                    placeholder="Enter your birthday" asp-for="@Model.customer.Age">
                            </div>
                        </div>
                        <div class="form-group row">
                            <input type="hidden" asp-for="@Model.customer.Image" class="form-control">
                        </div>
                        <div class="form-group row">
                            <label asp-for="@Model.customer.ImageUpload" class="col-sm-2 col-form-label">Upload
                                Image:</label>
                            <div class="col-sm-10">
                                <input type="file" asp-for="@Model.customer.ImageUpload" class="form-control" required>
                                <span asp-validation-for="@Model.customer.ImageUpload" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
