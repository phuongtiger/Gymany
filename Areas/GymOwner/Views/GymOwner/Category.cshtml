@model IEnumerable<Gymany.Models.Category>
@{
    ViewData["Title"] = "Category";
}
@* using layout of Gymowner *@
@{
    Layout = "GymOwnerLayout";
}

@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="page-wrapper">
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Category Managements</h4>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Category Managements</h3>
                            <a asp-action="AddCategory" asp-controller="GymOwner" class="btn btn-primary">Add new</a>
                            <div class="table-responsive">
                                <table class="table text-wrap">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">CategoryID</th>
                                            <th class="border-top-0">Type</th>
                                            <th class="border-top-0">Description</th>
                                            <th class="border-top-0">Image</th>                                    
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CategoryID</td>
                                                <td>@item.Type</td>
                                                <td>@item.Description</td>
                                                <td>@item.Image</td>
                                                <td>
                                                    <a asp-controller="GymOwner" asp-action="UpdateCategory" class="btn btn-success" asp-route-id="@item.CategoryID" style="color: #fff;">Update</a>
                                                    <a asp-controller="GymOwner" asp-action="DeleteCategory" class="btn btn-danger" asp-route-id="@item.CategoryID" style="color: #fff;">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer text-center"> 2024 Â© Gymany Admin by Group 05
            </footer>
        </div>
    </div>