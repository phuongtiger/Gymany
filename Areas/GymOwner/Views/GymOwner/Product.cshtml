@model IEnumerable<Gymany.Models.Product>
@{

    ViewData["Title"] = "Product";
}

@* using layout of Gymowner *@
@{
    Layout = "GymOwnerLayout";
}


@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="page-wrapper">
            <div class="page-breadcrumb bg-white">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Product Managements</h4>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3 class="box-title">Product Managements</h3>
                            <a asp-action="AddProduct" asp-controller="GymOwner" class="btn btn-primary">Add new</a>
                            <div class="table-responsive">
                                <table class="table text-wrap">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0">#</th>
                                            <th class="border-top-0">Product Name</th>
                                            <th class="border-top-0">Description</th>
                                            <th class="border-top-0">Amount</th>
                                            <th class="border-top-0">Image</th>
                                            <th class="border-top-0">Price</th>
                                            <th class="border-top-0">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ProductID</td>
                                                <td>@item.Name</td>
                                                <td style="max-width: 300px;">@item.Description</td>
                                                <td>@item.Amount</td>
                                                <td><img src="
                                                    @item.Image" alt="image" style="width: 100px; height: 100px;" /></td>
                                                <td>@item.Price</td>
                                                <td>
                                                    <a asp-controller="GymOwner" asp-action="UpdateProduct" class="btn btn-success" asp-route-id="@item.ProductID" style="color: #fff;">Update</a>
                                                    <a asp-controller="GymOwner" asp-action="DeleteProduct" class="btn btn-danger" asp-route-id="@item.ProductID" style="color: #fff;">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="footer text-center"> 2024 Â© Gymany Admin by Group 05
            </footer>
        </div>
    </div>