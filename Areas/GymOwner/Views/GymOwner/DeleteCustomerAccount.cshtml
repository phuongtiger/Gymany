@model Gymany.Models.Customer

@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-action="DeleteCustomerAccount" method="post">
    <input type="hidden" asp-for="CustomerID" />
     <div class="text-center">
        <h2 class="display-4">Are You Want to delete this Customer</h2>
    </div>
    <div class="text-center">
         <button type="submit" class="btn btn-danger">Delete</button> Or <a asp-action="CustomerAccount" asp-controller="GymOwner" class="btn btn-success">Back to Customer</a>
    </div>
   

</form>