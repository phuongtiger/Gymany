@model Gymany.Models.Post
@{
    ViewData["Title"] = "AddPost";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

 <div class="text-center">
        <h2 class="display-4">Add Post</h2>
    </div>
<form asp-controller="GymOwner" asp-action="AddPost" method="post" class="container" style="max-width: 1100px;" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Date:</label>
        <div class="col-sm-10">
            <input readonly type="date" asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
            <textarea id="Title" asp-for="Title"  class="form-control"></textarea>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Content" class="col-sm-2 col-form-label">Content:</label>
        <div class="col-sm-10">
            <textarea id="Content" asp-for="Content" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row" style="display: none;">
        <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Image" class="form-control">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImageUpload" class="col-sm-2 col-form-label">Upload Image:</label>
        <div class="col-sm-10">
            <input type="file" asp-for="ImageUpload" class="form-control" required>
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PTID" class="col-sm-2 col-form-label">PT Name:</label>
        <div class="col-sm-10">
            <select asp-for="PTID" class="form-control" asp-items="@ViewBag.NamePT"></select>
            <span asp-validation-for="PTID" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="StaffID" class="col-sm-2 col-form-label">Staff Name:</label>
        <div class="col-sm-10">
            <select asp-for="StaffID" class="form-control" asp-items="@ViewBag.NameStaff"></select>
            <span asp-validation-for="StaffID" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Submit" class="btn btn-primary">
            <a asp-action="Post" asp-controller="GymOwner" class="btn btn-danger">Back to Post</a>
        </div>
    </div>
</form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var currentDate = new Date().toISOString().substr(0, 10);
        document.getElementById('Date').value = currentDate;
    });
</script>
<script>
        document.addEventListener('DOMContentLoaded', function () {
            ClassicEditor
                .create(document.querySelector('#Content'))
                .catch(error => {
                    console.error(error);
                });
        });
    </script>