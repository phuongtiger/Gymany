
@model Gymany.Models.ListModels
@{
    ViewData["Title"] = "RegisterForm";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Phần form -->
            <div class="form-container">
                <div class="row">
                    <div class="col-md-4">
                        <!-- Hình ảnh của người tập gym -->
                        <img src="gym_image.jpg" alt="Gym Image" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <form asp-action="RegisterForm">
                            <div class="form-group">
                                <label asp-for="@Model.customer.Username">Username:</label>
                                <input type="text" class="form-control" id="username" name="username">
                                <span asp-validation-for="@Model.customer.Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Password">Password:</label>
                                <input type="password" class="form-control" id="password" name="password">
                                <span asp-validation-for="@Model.customer.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.ConfirmPassword">Confirm Password:</label>
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                                <span asp-validation-for="@Model.customer.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Name">Full Name:</label>
                                <input type="text" class="form-control" id="Name" name="Name">
                                <span asp-validation-for="@Model.customer.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Address">Address:</label>
                                <input type="text" class="form-control" id="address" name="address">
                                <span asp-validation-for="@Model.customer.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Age">Age:</label>
                                <input type="date" class="form-control" id="age" name="age">
                                <span asp-validation-for="@Model.customer.Age" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Phone">Phone:</label>
                                <input type="text" class="form-control" id="phone" name="phone">
                                <span asp-validation-for="@Model.customer.Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.customer.Email">Email:</label>
                                <input type="email" class="form-control" id="email" name="email">
                                <span asp-validation-for="@Model.customer.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">REGISTER</button>
                            </div>
                        </form>
                    </div>
                </div>
                <hr>
                <div class="text-center">
                    <a asp-action="Login" class="btn btn-outline-primary btn-primary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}