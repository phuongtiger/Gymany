@model Gymany.Models.Product
@{
    ViewData["Title"] = "AddProduct";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

 <div class="text-center">
        <h2 class="display-4">Add Product</h2>
    </div>
<form asp-controller="GymOwner" asp-action="AddProduct" method="post" class="container" style="max-width: 1100px;" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Amount" class="col-sm-2 col-form-label">Amount:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Amount" class="form-control">
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <input type="hidden" asp-for="Image" class="form-control">
    </div>
    <div class="form-group row">
        <label asp-for="ImageUpload" class="col-sm-2 col-form-label">Upload Image:</label>
        <div class="col-sm-10">
            <input type="file" asp-for="ImageUpload" class="form-control" required>
            <span asp-validation-for="ImageUpload" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryID" class="col-sm-2 col-form-label">Type of Category</label>
        <div class="col-sm-10">
            <select asp-for="CategoryID" class="form-control" asp-items="@ViewBag.CategoryID"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Submit" class="btn btn-primary">
            <a asp-action="Product" asp-controller="GymOwner" class="btn btn-danger">Back to Product</a>
        </div>
    </div>
</form>