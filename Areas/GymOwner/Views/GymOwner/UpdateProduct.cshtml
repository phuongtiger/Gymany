@model Gymany.Models.Product
@{
    ViewData["Title"] = "UpdateProduct";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-center">
    <h2 class="display-4">Update Product</h2>
</div>
<form asp-controller="GymOwner" asp-action="UpdateProduct" method="post" class="container" style="max-width: 1100px;">

     <div class="form-group row">
        <label asp-for="ProductID" class="col-sm-2 col-form-label">Product ID:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="ProductID" value="@ViewBag.ProductID" class="form-control" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="@Model.Name" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Description" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Amount" class="col-sm-2 col-form-label">Amount:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Amount" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Image" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Price" class="form-control" required>
        </div>
    </div>

<div class="form-group row">
        <label asp-for="CategoryID" class="col-sm-2 col-form-label">CategoryID ID:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="CategoryID" value="@ViewBag.CategoryID" class="form-control">
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Update" class="btn btn-primary">
            <a asp-action="Product" asp-controller="GymOwner" class="btn btn-danger" style="color: #fff;">Back to Product</a>
        </div>

    </div>
</form>