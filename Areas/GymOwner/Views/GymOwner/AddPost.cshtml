@model Gymany.Models.Post
@{
    ViewData["Title"] = "AddPost";
}
@{
    Layout = "GymOwnerLayout";
}
@* declare tag helper in areas *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

 <div class="text-center">
        <h2 class="display-4">Add Post</h2>
    </div>
<form asp-controller="GymOwner" asp-action="AddPost" method="post" class="container" style="max-width: 1100px;">
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Date:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Date" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Content" class="col-sm-2 col-form-label">Content:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Content" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="Title" class="form-control" required>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Image" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PTID" class="col-sm-2 col-form-label">PTID:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="PTID" class="form-control" step="1" required>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StaffID" class="col-sm-2 col-form-label">StaffID:</label>
        <div class="col-sm-10">
            <input type="number" asp-for="StaffID" class="form-control" step="1" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <input type="submit" value="Submit" class="btn btn-primary">
            <a asp-action="Post" asp-controller="GymOwner" class="btn btn-danger">Back to Post</a>
        </div>
    </div>
</form>