@{
    ViewData["Title"] = "BMI";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BMI Calculator</title>
</head>
<body>
    <style>
        h1{
            text-align: center;
            padding-top: 30px;
            color: var(--dark)
        }
        body {
            font-family: Arial, sans-serif;
        }

        form {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="number"] {
            margin-bottom: 10px;
            border: 2px solid #868e96;
            padding: 5px;
            width: 100%;
        }

        button {
            padding: 5px 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        #result {
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }
    </style>
    <div class="container">
        <div class="row" style="padding: 50px;">
            <div class="col-md-6" style="background: #fff;">
                <h1>BMI Calculator</h1>
                <form id="bmiForm">
                    <label for="weight">Weight (kg):</label>
                    <input type="number" id="weight" name="weight" placeholder="Input your weight, Ex: 70kg" required><br>

                    <label for="height">Height (cm):</label>
                    <input type="number" id="height" name="height" placeholder="Input your height, Ex: 170cm" required><br>

                    <button type="submit">Calculate BMI</button>
                </form>

                <div id="result"></div>
            </div>
            <div class="col-md-6">
                <img src="/images/BMI.png" style="width: 100%;">
            </div>
        </div>
    </div>
    

    <script>
        document.getElementById("bmiForm").addEventListener("submit", function(event) {
            event.preventDefault();
            
            var weight = parseFloat(document.getElementById("weight").value);
            var height = parseFloat(document.getElementById("height").value) / 100; // Convert cm to m

            var bmi = weight / (height * height);
            
            displayResult(bmi);
        });

        function displayResult(bmi) {
            var resultElement = document.getElementById("result");

            var resultText;
            if (bmi < 18.5) {
                resultText = "Underweight";
            } else if (bmi < 25) {
                resultText = "Normal weight";
            } else if (bmi < 30) {
                resultText = "Overweight";
            } else {
                resultText = "Obese";
            }

            resultElement.textContent = "Your BMI: " + bmi.toFixed(1) + " - " + resultText;
        }
    </script>
</body>
</html>