@model Gymany.Models.WorkoutPlan
@{
    ViewData["Title"] = "Edit";
}
@{
    Layout = "PTLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div style="padding-top: 50px;"></div>
<div class="row bg-light p-12">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div class="form-group">
                <input readonly type="hidden" asp-for="WorkoutPlanID" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label h3"></label>
                <input asp-for="Name" class="form-control form-control-lg" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label h3"></label>
                <input readonly type="date" asp-for="StartDate" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label h3"></label>
                <input type="date" asp-for="EndDate" class="form-control form-control-lg" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label h3"></label>
                <textarea asp-for="Description" class="form-control form-control-lg text-justify"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session" class="control-label h3"></label>
                <input asp-for="Session" class="form-control form-control-lg" />
                <span asp-validation-for="Session" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity" class="control-label h3"></label>
                <input asp-for="Activity" class="form-control form-control-lg" />
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- Sử dụng trường ẩn để lưu trữ giá trị PTID -->
                <input readonly type="hidden" asp-for="PTID" class="form-control form-control-lg" />
            </div>
            <div class="form-group">
                <label asp-for="MemberID" class="control-label h3">Member No</label>
                <input readonly asp-for="MemberID" class="form-control form-control-lg" asp-items="ViewBag.cusid"/>
            </div>
            <div class="card-footer d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-lg">Update</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    document.addEventListener('DOMContentLoaded', function () {
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    });
</script>